{
  "manifest_version": 3,
  "name": "Search Relay",
  "version": "0.1.0",
  "description": "快速在不同搜索引擎之间跳转搜索关键词。支持划词搜索和从搜索页面提取关键词",
  "author": "Hakuin123",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_title": "Search Relay - 点击执行搜索跳转",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "options_page": "options.html",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ]
}
